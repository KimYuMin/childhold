<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DriverActivity"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/peach_p">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운전자용"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_map"
            android:name="com.google.android.gms.maps.MapFragment"/>

        <TextView
            android:id="@+id/next_destination_text"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:background="#99000000"
            android:textSize="18sp"
            android:text="next_destnation"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/driver_default"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@color/orange_p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3"
                android:textSize="20dp"
                android:text="아직 운행중이 아닙니다."
                android:background="#66000000"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/drive_go_to_school_btn"
                    android:drawableTop="@drawable/icon_school"
                    android:drawablePadding="8dp"
                    android:text="등원시작"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/orange_p"
                    android:padding="8dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/drive_go_to_home_btn"
                    android:drawableTop="@drawable/icon_home"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:text="하원시작"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/orange_p"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/driver_drive"
            android:orientation="horizontal">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:background="@color/white"
                android:id="@+id/child_list">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drive_end_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3.5"
                android:text="운행이 완료되었습니다. \n남아있는 아이가 있는지 확인 해주세요."/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/drive_end_button"
                android:text="운행 종료"
                android:background="#E9AA0D"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
